@model INTELECTAH.ConsultaFacil.ViewModel.PacienteViewModel

<div class="panel-body">
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="input-group m-b">
                    <span class="input-group-addon"><i class="fa fa-edit"></i></span>
                    <input asp-for="Nome" class="form-control" placeholder="Nome" />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label asp-for="CPF" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="input-group m-b">
                    <span class="input-group-addon"><i class="fa fa-id-card-o"></i></span>
                    <input asp-for="CPF" class="form-control" placeholder="Ex: 46480549031" />
                </div>
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label asp-for="DataNascimento" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="input-group m-b">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input asp-for="DataNascimento" class="form-control" />
                </div>
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label asp-for="Sexo" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="input-group m-b">
                    <span class="input-group-addon"><i class="fa fa-group"></i></span>
                    @Html.DropDownList("Sexo", (IEnumerable<SelectListItem>)ViewBag.SexoEnum, "Selecione o sexo", new { @class = "form-control" })
                </div>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label asp-for="Telefone" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="input-group m-b">
                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                    <input asp-for="Telefone" class="form-control" placeholder="Ex: 81 999999999" />
                </div>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label asp-for="Email" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="input-group m-b">
                    <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="email@exemplo.com.br" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>